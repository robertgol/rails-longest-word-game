<div class="min-vh-100 d-flex flex-column align-items-center justify-content-center p-3 gap-3">
  <div class="text-center">
    <h1>Welcome to the longest word-game!</h1>
    <p class="lead">Here are your letters:</p>
    <div class="d-flex flex-wrap justify-content-center gap-1">
      <% @letters.each do |letter| %>
        <div class="badge text-dark bg-light">
          <%= letter.upcase %>
        </div>
      <% end %>
    </div>
  </div>
  <form action="<%= create_score_path %>" method="post" class="d-flex flex-column align-items-center gap-2">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, @start_time %>
    <input
      type="text"
      name="answer"
      placeholder="Your answer"
      inputmode="text"
      autocapitalize="none"
      autocorrect="off"
      spellcheck="false"
      autocomplete="off"
      class="form-control-lg w-100"
    >
      <input type="submit" value="Check!" class="btn btn-primary btn-lg w-100" >
    </form>
  </div>
